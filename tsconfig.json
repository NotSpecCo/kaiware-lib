{
	"compilerOptions": {
		"target": "ES6",
		"module": "ES2015",
		// "baseUrl": ".",
		// "paths": {
		// 	"$": ["./src"],
		// 	"$/*": ["./src/*"]
		// },
		"strict": true,
		"strictNullChecks": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"noUnusedLocals": true,
		"declaration": true,
		"emitDeclarationOnly": true,
		"outDir": "./build",
		"resolveJsonModule": true,
		"moduleResolution": "Bundler"
		// "isolatedModules": true,
	},
	"include": ["src"],
	"exclude": ["node_modules", "build"]
}
